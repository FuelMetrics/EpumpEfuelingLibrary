<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="32"
            android:useLevel="false">
            <solid android:color="#ddd" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="32"
                android:useLevel="false">
                <gradient
                    android:startColor="#ddd"
                    android:centerColor="#19899e"
                    android:endColor="#4bb2a4"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>