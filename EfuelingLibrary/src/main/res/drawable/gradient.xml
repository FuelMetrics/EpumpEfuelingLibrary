<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="7sp"/>
            <gradient
                android:startColor="@color/gradientEnd"
                android:endColor="@color/gradientStart"
                android:type="linear"/>
        </shape>
    </item>
    <item android:top="2sp"
        android:left="1sp"
        android:right="1sp">
        <shape>
            <corners android:radius="7sp"/>
            <gradient
                android:startColor="@color/gradientMid"
                android:endColor="@color/gradientStart"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>